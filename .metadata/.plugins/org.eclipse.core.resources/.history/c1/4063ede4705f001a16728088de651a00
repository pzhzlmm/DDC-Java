public class FinallyTest {
	
	@Test
	public void test1(){
		try{
			int[] arr = new int[10];
			System.out.println(arr[-9]);
		}catch(ClassCastException e){
			e.printStackTrace();
		}finally{
			System.out.println("æˆ‘ä¸€å®šä¼šè¢«æ‰§è¡?");
		}
		
		System.out.println("æˆ‘ä¼šè¢«æ‰§è¡Œå—ï¼?");
	}
	
	public int method(){
		try{
			int[] arr = new int[10];
			System.out.println(arr[-9]);
			return 1;
		}catch(Exception e){
			e.printStackTrace();
			return 2;
		}finally{
			System.out.println("æˆ‘ä¸€å®šä¼šè¢«æ‰§è¡Œï¼ï¼?");
			return 3;
		}
	}
	
	@Test
	public void testMethod(){
		int i = method();
		System.out.println(i);
	}
}
